<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script> 
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="span8">
    <p>Posted By:</p>
    <div class="profile_info_wrapper">
      <div class="profile_picture">
        <%= image_tag  @guide_post.user.photo.url(:small), :class => "img-polaroid" %>
      </div>
      
      <%= link_to @guide_post.user, @guide_post.user %>
      <p><%= @guide_post.user.about %></p>
    </div>  
    <table class="table table-bordered table-striped">
      <colgroup>
        <col class="span1">
        <col class="span7">
      </colgroup>
      <thead>
        <tr>
          <th>Title</th>
          <th><span class="post_title"><%= @guide_post.title %></span></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Description</td>
          <td><%= @guide_post.description %></td>
        </tr>
        <tr>
          <td>Number of People</td>
          <td><%= @guide_post.num_people %></td>
        </tr>
        <tr>
          <td>Cost per Person</td>
          <td>$<%= @guide_post.price_per %></td>
        </tr>
        <tr>
          <td>Trip Date</td>
          <td><%= @guide_post.date %></td>
        </tr>
        <tr>
          <td>Status</td>
          <td>This trip is currently <%= @guide_post.status %></td>
        </tr> 
        <tr>
          <td>River</td>
          <td><%= @guide_post.river %></td>
        </tr>   
        <tr>
          <td colspan=2>         
            <div class="btn-group">
                <button class="btn btn-primary" align="center">More</button>
                <button class="btn btn-primary" data-toggle="dropdown">
                  <span class="caret"></span>
                </button>

                <ul class="dropdown-menu">
                  <li><%= link_to 'Message Guide', "/conversations/new?uid=#{@guide_post.user.id}" %></li>
                  <li><%= link_to 'Hold', @guide_post %></li>
                  <li><%= link_to 'Wait List', @guide_post %></li>
                  <li><%= link_to 'Identify as Abusive', flag_as_abused_path(@guide_post), :method => :put %></li>
                  <li class="divider"></li>
                  <li><%= link_to 'Book this trip!', @guide_post %></li>
                </ul>
              </div></td>    </tr>       

      </tbody>
    </table>

    <div id="map_canvas" style="width: 550px; height: 450px"></div> 
  </div>
</div>


<%= link_to 'Back', guide_posts_path %>
<script type="text/javascript"> 
//<![CDATA[
  $(document).ready(function () {
     // global "map" variable
      var map = null;
      var marker = null;

      var infowindow = new google.maps.InfoWindow(
        { 
          size: new google.maps.Size(150,50)
        });

      // A function to create the marker and set up the event window function 
      function createMarker(latlng, name, html) {
          var contentString = html;
          var marker = new google.maps.Marker({
              position: latlng,
              map: map,
              zIndex: Math.round(latlng.lat()*-100000)<<5
              });

          google.maps.event.addListener(marker, 'click', function() {
              infowindow.setContent(contentString); 
              infowindow.open(map,marker);
              });
          google.maps.event.trigger(marker, 'click');    
          return marker;
      }

       

      function initialize() {
        // create the map
        var myOptions = {
          zoom: 10,
          center: new google.maps.LatLng(<%=@guide_post.latitude%>, <%=@guide_post.longitude%>),
          mapTypeControl: true,
          mapTypeControlOptions: {style: google.maps.MapTypeControlStyle.DROPDOWN_MENU},
          navigationControl: true,
          mapTypeId: google.maps.MapTypeId.ROADMAP
        }

        map = new google.maps.Map(document.getElementById("map_canvas"),
                                      myOptions);

        var latlng = new google.maps.LatLng(<%=@guide_post.latitude%>, <%=@guide_post.longitude%>); 

        marker = createMarker(latlng, "name");

       
        google.maps.event.addListener(map, 'click', function() {
          infowindow.close();
        });


      }
      initialize();


      
    });
//]]>
</script> 