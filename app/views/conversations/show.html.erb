
<div class="conversation_messages">
  <% @messages.each do |message| %>
    <div class="msg">
      <div class="message-date"><%= message.created_at %></div>
      <div class="message-sender"><%= message.user %> said:</div>
      <div class="clear"></div>
      <div class="msg-text">
        <%= message.text %>
      </div>
    </div>
  <% end %>
</div>


<%= form_for(@message) do |f| %>
	<%= f.hidden_field :conversation_id, :value => params[:id] %>
	<%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="control-group">
    <div class="controls">
      <%= f.text_area :text, :rows => 3, :class => "text_field"  %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit 'Reply', :class => 'btn btn-primary' %>
  </div>
<% end %>
