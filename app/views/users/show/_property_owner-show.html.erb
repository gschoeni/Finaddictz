<span class="welcome">Welcome Property Owner <%= @user.first_name %></span>

<div class="profile_picture">
	<%= image_tag @user.photo.url(:medium), :class => "img-polaroid" %>
</div>
<div class="span7">
<%= @user.about %>
</div>	
<div class="prof_info"> 
	<div id="edit_profile"><%= link_to 'Manage Profile', edit_user_path%> <i class="icon-pencil"></i></div>
	
	
<div class="clear"></div>

<h4>Trips</h4> 
<table class="table table-hover table-condensed table-striped">
	<thead>
		<th>Title</th>
		<th>Status</th>
		<th>Date Posted</th>
		<th>Manage Posts</th>

	</thead>
	<tbody>
		<% @my_posts.each do |post| %>
	    <tr>
		    	<td><%=h truncate(post.title, :length => 30) %> <% if post.title.length > 30 %><% end%></td>
		    	<td><%= post.booking_status %></td>
		    	<td cellspacing="10px"><%=post.created_at.strftime("%m/%d/%Y") %></td>
		      <td>         
		        <div class="btn-group">
		            <button class="btn btn-mini btn-primary" align="center">More</button>
		            <button class="btn btn-mini btn-primary" data-toggle="dropdown">
		              <span class="caret"></span>
		            </button>

		            <ul class="dropdown-menu">
		              <li><%= link_to 'View Post', property_post_path(post) %></li>
		              <li><%= link_to 'Edit Post', edit_property_post_path(post) %></li>
		              <li><%= link_to 'Delete Post', edit_property_post_path(post) %></li>
		            </ul>
		          </div>
		      </td>    
		  </tr>   
		<% end %>
	</tbody>

	
</table>
