<span class="welcome">Welcome <%= @user.first_name %></span>   <br><br>

<div class="profile_picture">
	<%= image_tag @user.photo.url(:medium), :class => "img-polaroid" %>
</div>
<div class="span7">
<%= @user.about %>
</div>	
<div class="prof_info"> 
	<div id="edit_profile"><%= link_to 'Manage Profile', edit_user_path%> <i class="icon-pencil"></i></div>
	
	
<div class="clear"></div>
<br>
	<h4>Completed Trips:   #</h4>
	<h4>Messages Pending:  <% link_to '#', edit_user_path%></h4><!-- link to the messages section -->

</div>
<div class="clear"></div>
<hr>
<h4>Trips</h4> 
<table class="table table-hover table-condensed table-striped">
	<thead>
		<th>Title</th>
		<th>Date Posted</th>
		<th>Manage Posts</th>
	</thead>
	<tbody>
		<% @my_posts.each do |post| %>
	    <tr>
	    <small>
	    	<td><%=h truncate(post.title, :length => 30) %> <% if post.title.length > 30 %><% end%></td>
	    	<!-- <td><%= link_to h(post.title), edit_guide_post_path(post) %></td> -->
	    	<td cellspacing="10px"><%=post.created_at.strftime("%m/%d/%Y") %></td>
	    </small>
      <td>         
        <div class="btn-group">
            <button class="btn btn-mini btn-primary" align="center">More</button>
            <button class="btn btn-mini btn-primary" data-toggle="dropdown">
              <span class="caret"></span>
            </button>

            <ul class="dropdown-menu">
              <li><%= link_to 'View Post', guide_post_path(post) %></li>
              <li><%= link_to 'Edit Post', edit_guide_post_path(post) %></li>
              <li><%= link_to 'Delete Post', edit_guide_post_path(post) %></li>
              <li class="divider"></li>
              <li><%= link_to 'Manage Trip', edit_guide_post_path %></li>
            </ul>
          </div>
      </td>    
  </tr>   
		<% end %>
	</tbody>

	
</table>