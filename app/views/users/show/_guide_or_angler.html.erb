<span class="welcome">Welcome <%= @user.first_name %></span>   <br><br>

<div class="profile_picture">
	<%= image_tag @user.photo.url(:medium), :class => "img-polaroid" %>
</div>
<div class="prof_info"> 
	<div id="edit_profile"><%= link_to 'Manage Profile', edit_user_path%> <i class="icon-pencil"></i></div>
	
	<h3>Number of Trips:</h3>
	<h3>Messages:</h3>

</div>
<div class="clear"></div>
<hr>
<h2>Manage Trips</h2>
<hr>
<h2>Posted Trips</h2> 
<table class="table">
	<thead>
		<th>Title</th>
		<th>Description</th>
		<th>Post Date</th>
		<th>Actions</th>
	</thead>
	<tbody>
		<% @my_posts.each do |post| %>
	    <tr>
	    	<td><%= link_to h(post.title), edit_guide_post_path(post) %></td>
	    	<td><%=post.description%></td>
	    	<td><%=post.created_at%></td>
	    	<td>
	    		<%= link_to 'View Post', guide_post_path(post), :class => 'btn btn-info'%>
	    		<%= link_to 'Edit Post', edit_guide_post_path(post), :class => 'btn btn-primary'%>
	    		<%= link_to 'Delete', edit_guide_post_path(post), :class => 'btn btn-danger'%>
	    	</td>
	    </tr>
		<% end %>
	</tbody>

	
</table>