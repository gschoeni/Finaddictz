      <% if current_user.notifications.count > 0 %>
        <span class="badge badge-important"><%=current_user.notifications.count %></span> 
      <% end %>
      <b class="caret"></b></a>
    <ul class="dropdown-menu">
      <li>
        <a href="<%= notifications_url %>">
          Notifications
          <% if current_user.notifications.count > 0 %>
            <span class="badge badge-important"><%=current_user.notifications.count %></span> 
          <% end %>
        </a>
      </li>
      <li>
        <a href="<%= conversations_url %>">
          Inbox
          <% if current_user.unread_messages > 0 %>
            <span class="badge badge-important"><%=current_user.unread_messages %></span> 
          <% end %>
        </a>
      </li>
      <%= render 'layouts/navbars/switch_roles' %>
      <li class="divider"></li>
